@model IEnumerable<DoAnWeb.Models.USER>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-bordered">
    <tr>
        <th>
            Tên Người Dùng
        </th>
        <th>
            Mật Khẩu
        </th>
        <th>
            Email
        </th>
        <th>
            Số Điện Thoại
        </th>
        <th>
            Địa Chỉ
        </th>
        <th>
            Cho Phép
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.USER_NAME)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PASSWORD)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EMAIL)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SODT)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DCHI)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Allowed)
        </td>
        <td>
            @Html.ActionLink("Chỉnh Sửa", "Edit", new { id = item.USER_ID }) |
            @Html.ActionLink("Xem Chi Tiết", "Details", new { id = item.USER_ID }) |
            @Html.ActionLink("Xóa", "Delete", new { id = item.USER_ID })
        </td>
    </tr>
}

</table>
