@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="zxx">
<!-- Head -->

<head>
    <title>Đăng Nhập Website</title>
    <!-- Meta-Tags -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="utf-8">
    <meta name="keywords" content="Website Cake & Coffee">
    <script>
        addEventListener("load", function () {
            setTimeout(hideURLbar, 0);
        }, false);

        function hideURLbar() {
            window.scrollTo(0, 1);
        }
    </script>
    <!-- //Meta-Tags -->
    <!-- Index-Page-CSS -->
    <link rel="stylesheet" href="~/Content/csslogin/style.css" type="text/css" media="all">
    <!-- //Custom-Stylesheet-Links -->
    <!--fonts -->
    <!-- //fonts -->
    <link rel="stylesheet" href="~/Content/csslogin/font-awesome.min.css" type="text/css" media="all">
    <!-- //Font-Awesome-File-Links -->
    <!-- Google fonts -->
    <link href="//fonts.googleapis.com/css?family=Quattrocento+Sans:400,400i,700,700i" rel="stylesheet">
    <link href="//fonts.googleapis.com/css?family=Mukta:200,300,400,500,600,700,800" rel="stylesheet">
    <!-- Google fonts -->

</head>
<!-- //Head -->
<!-- Body -->

<body>
    <section class="main">
        <div class="layer">
            <div class="bottom-grid">
                <div class="logo">
                    <h1> <a href="~/Home/Index"> L'appétit</a></h1>
                </div>
                <div class="links">
                    <ul class="links-unordered-list">
                        <li class="active">
                            <a href="~/Home/Login" class="">Login</a>
                        </li>
                        <li class="">
                            <a href="~/Home/Register" class="">Register</a>
                        </li>
                        <li class="">
                            <a href="~/Home/About" class="">About Us</a>
                        </li>
                        <li class="">
                            <a href="~/Home/Contact" class="">Contact</a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="content-w3ls">
                <div class="text-center icon">
                    <span class="fa fa-hubspot"></span>
                </div>
                <div class="content-bottom">
                    <form action="~/Home/NewPassword?id=@ViewBag.id" method="post">
                        <div class="field-group">
                            <div class="wthree-field">
                                <p class="text-head">
                                    Chúng tôi sẽ gửi mật khẩu mới cho bạn về email @ViewBag.mail.
                                </p>
                            </div>
                        </div>
                        <div class="wthree-field">
                            <button type="submit" class="btn">Xác Nhận</button>
                        </div>

                    </form>
                </div>
            </div>

        </div>
    </section>
    @if (ViewBag.Message != null)
    {
        <script type="text/javascript">
            window.onload = function () {
                alert("@ViewBag.Message");
            }
        </script>
    }
</body>
<!-- //Body -->
</html>
