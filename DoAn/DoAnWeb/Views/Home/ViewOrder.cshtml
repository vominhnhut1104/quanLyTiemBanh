
@{
    ViewBag.Title = "ViewOrder";
    Layout = "~/Views/Shared/_Layout.cshtml";
    IEnumerable<DoAnWeb.Models.f_CartUs_Result> listtongdh = ViewBag.Tongdh;
    int i = 0;
} 

<table class="table table-bordered">
    <tr>
        <th>
            Số Hóa Đơn
        </th>
        <th>
            Tên Sản Phẩm
        </th>
        <th>
            Số Lượng
        </th>
        <th>
            Ngày Đặt
        </th>
        <th>
            Ngày Giao
        </th>
        <th>
            Tổng Tiền
        </th>
        <th>
            Tình Trạng
        </th>
        <th></th>
    </tr>

    @foreach (var item in listtongdh)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SODH)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TENSP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SL)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NGAYDAT)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NGAYGIAO)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TONGGIATIEN)
            </td>
            <td>
                @ViewBag.tinhtrang[i++]
            </td>
         </tr>
    }

</table>